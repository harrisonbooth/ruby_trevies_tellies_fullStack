<div class="general_wrapper" id="customer_sales_index">
  <div class="general_wrapper_heading">
    <h1> Customer sales </h1>
    <a href="/customers/<%= @customer.id() %>/sales/new">New sale</a>
  </div>


  <table id="customer_table">
    <tr><th>Last Name</th><th>First Name</th><th>Serial Number</th><th>Manufacturer</th><th>Total</th></tr>
    
    <% for sale in @sales %>
    <tr>
      <td><%= @customer.last_name() %></td>
      <td><%= @customer.first_name() %></td>
      <td><%= sale.television.model_no() %></td>
      <td><%= sale.television.manufacturer().name() %></td>
      <td>Â£<%= sale.television.retail_price() %></td>
      <td><form action="/customers/<%= @customer.id() %>/sales/<%= sale.id() %>/delete" method="post"><input class="submit_button" type="submit" value="Delete"></form></td>
    </tr>
    <% end %>
  </table>
</div>
